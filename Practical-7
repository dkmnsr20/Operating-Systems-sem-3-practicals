# Practical 7: Write a Program to Copy Files Using System Calls

## Section 1: C Code
# Save this as 'practical7.c'
# Uses open/read/write for low-level file copy.

#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    if (argc != 3) {
        fprintf(stderr, "Usage: %s <source> <dest>\n", argv[0]);
        return 1;
    }

    int src_fd = open(argv[1], O_RDONLY);
    if (src_fd == -1) {
        perror("open source");
        return 1;
    }

    int dest_fd = open(argv[2], O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (dest_fd == -1) {
        perror("open dest");
        close(src_fd);
        return 1;
    }

    char buf[1024];
    ssize_t bytes;
    while ((bytes = read(src_fd, buf, sizeof(buf))) > 0) {
        write(dest_fd, buf, bytes);
    }

    close(src_fd);
    close(dest_fd);
    printf("File copied successfully.\n");
    return 0;
}

## Section 2: Linux Terminal Commands
# Run these in Ubuntu/Linux terminal

gcc -o practical7 practical7.c
echo "Hello, world!" > input.txt  # Create sample
./practical7 input.txt output.txt
diff input.txt output.txt  # Verify (no output = success)

## Section 3: Expected Output/Input
# Input: Command-line args (source/dest files).
# Expected Output:
File copied successfully.

# Notes:
# - Handles binary/text files in 1KB chunks.
# - Errors: Check with ls -l output.txt.
# - man open/read/write for syscalls.
